<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <h4><%= f.label :login %></h4>
  <p><%= f.text_field :login, :value => 'digite seu e-mail' %></p>
  <p><%= f.password_field :password, :value => 'password' %></p>
  <p><%= f.check_box :remember_me, :class => "check" %><%= f.label :remember_me, 'Manter-se logado' %></p>
  <p class="submit fix"><%= f.submit "Ok" %></p>
  <p class="lembrar"><a href="#">Esqueceu a senha? Clique aqui. TODO</a></p>
<% end %>
