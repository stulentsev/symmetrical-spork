<h1>New course</h1>

<% form_for(@course) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :period_from %><br />
    <%= f.date_select :period_from %>
  </p>
  <p>
    <%= f.label :period_to %><br />
    <%= f.date_select :period_to %>
  </p>
  <p>
    <%= f.label :objectives %><br />
    <%= f.text_area :objectives %>
  </p>
  <p>
    <%= f.label :results %><br />
    <%= f.text_area :results %>
  </p>
  <p>
    <%= f.label :professors_selection_process %><br />
    <%= f.text_area :professors_selection_process %>
  </p>
  <p>
    <%= f.label :students_selection_process %><br />
    <%= f.text_area :students_selection_process %>
  </p>
  <p>
    <%= f.label :communities %><br />
    <%= f.text_area :communities %>
  </p>
  <p>
      <% fields_for :student_profile, @course.student_profile do |sp| %>
          <p>
          <%= sp.label :sex %> <br />

          <%= select_tag :student_profile_sex options_for_select([['Masculine', 'M'], ['Feminine', 'F']]) %>
        </p>

      <% end %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', courses_path %>
