<h1>New course</h1>

<% form_for(@course) do |f| %>
    <%= f.error_messages %>

    <p>
        <%= f.label :period_from %><br/>
        <%= f.date_select :period_from %>
    </p>
    <p>
        <%= f.label :period_to %><br/>
        <%= f.date_select :period_to %>
    </p>
    <p>
        <%= f.label :objectives %><br/>
        <%= f.text_area :objectives %>
    </p>
    <p>
        <%= f.label :results %><br/>
        <%= f.text_area :results %>
    </p>
    <p>
        <%= f.label :professors_selection_process %><br/>
        <%= f.text_area :professors_selection_process %>
    </p>
    <p>
        <%= f.label :students_selection_process %><br/>
        <%= f.text_area :students_selection_process %>
    </p>
    <p>
        <%= f.label :communities %><br/>
        <%= f.text_area :communities %>
    </p>
    <p>
        <% fields_for :student_profile, @course.student_profile do |sp| %>
        <p>
            <%= sp.label :sex %><br/>
            <%= select_tag 'student_profile[sex]', options_for_select([['Masculine', 'M'], ['Feminine', 'F']]) %>
        </p>
        <p>
            <%= sp.label :age_from %>
            <%= sp.text_field :age_from, :size => 2 %> &nbsp;
            <%= sp.label :age_to %> &nbsp;
            <%= sp.text_field :age_to, :size => 2 %>
        </p>
        <p>
            <%= sp.label :schooling_id %><br/>
            <%= select_tag 'student_profile[schooling_id]', options_for_select(Schooling.find(:all).
                    map {|s| [s.name, s.id]}) %>
        </p>
        <p>
            <%= sp.label :observations %><br/>
            <%= sp.text_area :observations %>
        </p>
        <% end %>
    </p>
    <p>
        <%= f.submit "Create" %>
    </p>
<% end %>

<%= link_to 'Back', courses_path %>
