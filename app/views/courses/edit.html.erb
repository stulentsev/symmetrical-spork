<h1>Editing course</h1>

<% form_for(@course) do |f| %>
    <%= f.error_messages %>

    <p>
        <table>
            <tr>
                <td>
                    <%= f.label :period_from %><br/>
                    <%= @course.period_from %>
                </td>
                <td>
                    <%= f.label :period_to %><br/>
                    <%= @course.period_to %>
                </td>
            </tr>
        </table>
    </p>
    <p>
        <%= f.label :objectives %><br/>
        <%= f.text_area :objectives %>
    </p>
    <p>
        <%= f.label :results %><br/>
        <%= f.text_area :results %>
    </p>
    <p>
        <%= f.label :professors_selection_process %><br/>
        <%= f.text_area :professors_selection_process %>
    </p>
    <p>
        <%= f.label :students_selection_process %><br/>
        <%= f.text_area :students_selection_process %>
    </p>
    <p>
        <%= f.label :communities %><br/>
        <%= f.text_area :communities %>
    </p>
    <p>
        <%= render :partial => 'student_profile', :locals => {:profile => @course.student_profile} %>
    </p>
    <p>
        <%= render :partial => 'project_team_members/show_for_course' ,
                   :locals => {:course => @course,
                               :project_team_member => @project_team_member} %>
    </p>
    <p>
        <%= render :partial => 'activities/index' ,
                   :locals => {:course => @course,
                               :activity => @activity} %>
    </p>
    <p>
        <%= f.submit "Update" %>
    </p>

<% end %>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
